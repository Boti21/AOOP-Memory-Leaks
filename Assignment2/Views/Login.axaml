<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Assignment2.Views.Login">
    <Border Background="LightGray">
        <Border BorderBrush="Black"
                BorderThickness="3"
                CornerRadius="20"
                Background="White"
                Padding="40"
                Margin="270, 50">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Choose type of account:" FontWeight="DemiBold"/>
                <ListBox Background="White">
                    <CheckBox Content="Teacher"/>
                    <CheckBox Content="Student"/>
                </ListBox>
                <CheckBox Content="Teacher"></CheckBox>
                <CheckBox Content="Student"></CheckBox>
                <TextBlock Text="Username:" FontWeight="DemiBold" Padding="0, 10, 0, 5"/>
                <TextBox Text="tbd"></TextBox>
                <TextBlock Text="Password:" FontWeight="DemiBold" Padding="0, 10, 0, 5"/>
                <TextBox Text="tbd"></TextBox>
                
                <Button Content="Login" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,20, 0, 0" FontSize="20"/>
            </StackPanel>
        </Border>
    </Border>
</UserControl>
